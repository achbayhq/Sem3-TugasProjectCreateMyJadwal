<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">


    <View
        android:id="@+id/view2"
        android:layout_width="376dp"
        android:layout_height="642dp"
        android:alpha="0.6"
        android:background="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="101dp"
        android:layout_height="92dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/logo_jti_removebg_preview" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/abril_fatface"
        android:text="WELCOME TO JTI MOBILE"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <EditText
        android:id="@+id/txtUsrnm"
        android:layout_width="317dp"
        android:layout_height="60dp"
        android:layout_marginTop="256dp"
        android:backgroundTint="#56C6D5"
        android:ems="10"
        android:background="@drawable/border"
        android:hint="Username"
        android:padding="10dp"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="317dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#56C6D5"
        android:ems="10"
        android:hint="Password"
        android:padding="10dp"
        android:background="@drawable/border"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/txtUsrnm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtUsrnm"
        app:layout_constraintTop_toBottomOf="@+id/txtUsrnm" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#4477CE"
        android:onClick="activitySubmit"
        android:text="Masuk"
        android:textAlignment="center"
        android:textColorHighlight="#2196F3"
        android:textColorHint="#3F51B5"
        android:textColorLink="#43C5FF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtPass"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/txtPass"
        app:layout_constraintTop_toBottomOf="@+id/txtPass" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="244dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="keRegister"
        android:text="Belum Memiliki Akun? Klik Disini"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="145dp"
        android:layout_height="38dp"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />


</androidx.constraintlayout.widget.ConstraintLayout>